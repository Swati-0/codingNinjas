void sortZeroesAndOne(int input[], int size)
{
    //Write your code here
    int i=0, j=size-1;
    while(i<j){
        while(input[i]==0)
        i++;
        while(input[j]==1)
        j--;
        if(input[i]==1 && input[j]==0 && i<j){
            swap(input[i],input[j]);
        i++,j--;
        }
    }
}
