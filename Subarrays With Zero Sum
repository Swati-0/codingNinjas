#include <bits/stdc++.h> 
int countSubarrays(int n, vector<int> &arr){
    // Write your code here.
    unordered_map<int,int> mp;
    int sum=0,ans=0;
    mp[0]=1;
    for(int i=0; i<n; i++){
        sum+=arr[i];
        if(mp.find(sum)!=mp.end()){
            ans+=mp[sum];
        }
        mp[sum]++;
    }
    return ans;
}
